@model HTTP_5212_Passion_Project_RX_V2.Models.DrugDto 

@{
    ViewBag.Title = "DeleteConfirm";
}

<h2>Are you sure you want to delete this drug?</h2>
<a href="/Drug/List">Cancel</a>
<h2>@Model.DrugName</h2>
<div>Dosage: @Model.Dosage</div>
<div>Formulation: @Model.Formulation</div>
<form action="/Drug/Delete/@Model.DrugID" method="POST">
    <input type="submit" value="Confirm Delete"/>
</form>
