@model HTTP_5212_Passion_Project_RX_V2.Models.DrugDto

@{
    ViewBag.Title = "Edit";
}
<style>
    .heading {
        padding: 10px;
        text-align: center;
    }


    .links {
        color: gold;
        padding: 20px;
    }

    .myMenu ul {
        list-style-type: none;
        margin: 0;
        padding: 0;
        overflow: hidden;
        background-color: darkgray;
    }

    li {
        float: left;
    }

    li a {
        display: block;
        color: gold;
        text-align: center;
        padding: 14px 16px;
        text-decoration: none;
    }

        /* Change the link color  on hover */
        li a:hover {
            background-color: grey;
            color: #000000;
        }

    .button {
        font: bold 11px Arial;
        text-decoration: none;
        background-color: #EEEEEE;
        color: #333333;
        padding: 6px;
        border-top: 1px solid #CCCCCC;
        border-right: 1px solid #333333;
        border-bottom: 1px solid #333333;
        border-left: 1px solid #CCCCCC;
    }

    .myForm div {
        padding: 6px;
    }

    .myForm label {
        width: 137px;
    }


    footer {
        position: fixed;
        bottom: 0;
        left: 0;
    }
</style>


<div class="myMenu">
    <ul>
        <li><a href="/Prescription/PharmacyPrescriptionList"><span class="links">Back to List</span> </a></li>
    </ul>
</div>

<h2 class="heading">Update Drug</h2>

<form class="myForm" action="/Drug/Update/@Model.DrugID" method="POST">
    <div style="display:none">
        <input type="text" name="DrugID" value="@Model.DrugID" />
    </div>
    <div>
        <label>Name : </label>
        <input type="text" name="DrugName" value="@Model.DrugName" />
    </div>
    <div>
        <label>Dosage : </label>
        <input type="text" name="Dosage" value="@Model.Dosage" />
    </div>
    <div>
        <label>Formulation : </label>
        <input type="text" name="Formulation" value="@Model.FormulationId" />
    </div>
    <div>
        <input class="button" type="submit" value="Update Drug" />
    </div>

</form>

