@model HTTP_5212_Passion_Project_RX_V2.Models.PrescriptionDto
@{
    ViewBag.Title = "DeleteConfirm";
}

<style>

    .links {
        color: gold;
        padding: 20px;
    }

    .myMenu ul {
        list-style-type: none;
        margin: 0;
        padding: 0;
        overflow: hidden;
        background-color: darkgray;
    }

    li {
        float: left;
    }

        li a {
            display: block;
            color: gold;
            text-align: center;
            padding: 14px 16px;
            text-decoration: none;
        }

            /* Change the link color  on hover */
            li a:hover {
                background-color: grey;
                color: #000000;
            }
    .myMenu ul {
        list-style-type: none;
        margin: 0;
        padding: 0;
        overflow: hidden;
        background-color: darkgray;
    }
    .button {
        font: bold 11px Arial;
        text-decoration: none;
        background-color: #EEEEEE;
        color: #333333;
        padding: 6px;
        border-top: 1px solid #CCCCCC;
        border-right: 1px solid #333333;
        border-bottom: 1px solid #333333;
        border-left: 1px solid #CCCCCC;
    }
    h3 {
        display: block;
    }
</style>

<div class="myMenu">
    <ul>
        <li><a href="/Prescription/PharmacyPrescriptionList"><span class="links">Back to List</span> </a></li>
    </ul>
</div>

<h2 class="heading">Are you sure you want to delete this Prescription?</h2>
<div>
    <a class="button" href="/Prescription/List">Cancel</a>
</div>

<h3>Patient Name: @Model.PatientFirstName @Model.PatientLastName</h3>
<h3>Doctor  Name: @Model.DoctorName</h3>
<form action="/Prescription/Delete/@Model.ID" method="POST">
    <input class="button" type="submit" value="Confirm Delete" />
</form>


