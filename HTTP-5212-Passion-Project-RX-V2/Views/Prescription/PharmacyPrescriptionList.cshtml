@model IEnumerable<HTTP_5212_Passion_Project_RX_V2.Models.PrescriptionDto>
@{
    ViewBag.Title = "PharmacyPrescriptionList";
}

<div>
    <a href="/Prescription/List">Doctor's Prescription List'</a>
</div>

<h2>Pharmacy Prescription List</h2>

<div>
    <table>
        <tr>
            <td>Patient Name </td>
            <td>Doctor Name</td>
            <td>Processed Status</td>
            <td>Created Date</td>
            <td></td>
            <td></td>
            <td></td>
        </tr>

        @foreach (var p in Model)
        {
            if (!p.Status)
            {
                <tr>
                    <td>@p.PatientFirstName  @p.PatientLastName</td>
                    <td>@p.DoctorName</td>
                    <td>@p.CreatedDate</td>
                    <td>@p.Status</td>
                    <td><a href="/PrescriptionDrug/DetailsForPharmacy/@p.ID">View</a></td>
                    <td><a href="/Prescription/Edit/@p.ID">Update Patient Information</a></td>
                    <td><a href="/Prescription/DeleteConfirm/@p.ID">Delete Patient Information </a></td>
                </tr>

            }
        }
    </table>

</div>



