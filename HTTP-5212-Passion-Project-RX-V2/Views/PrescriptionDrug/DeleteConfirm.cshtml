@model HTTP_5212_Passion_Project_RX_V2.Models.ViewModels.DeleteConfirm
@{
    ViewBag.Title = "DeleteConfirm";
}

<h2>Are you sure you want to delete this drug details from prescription?</h2>
<a href="/PrescriptionDrug/List">Cancel</a>
@foreach (var pdrugs in Model.selectedPDrug)
{
    <h2>Patient Name:   @pdrugs.PatientName</h2>
    <h3>Doctor Name : @pdrugs.DoctorName</h3>
    <div>Quantity: @pdrugs.Quantity</div>
    <div>Repeat : @pdrugs.Repeat</div>

    <form action="/PrescriptionDrug/Delete/@pdrugs.DrugId" method="POST">
        <input type="submit" value="Confirm Delete" />
    </form>
}



