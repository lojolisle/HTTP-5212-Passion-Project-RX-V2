@model HTTP_5212_Passion_Project_RX_V2.Models.ViewModels.Details
@{
    ViewBag.Title = "Details";
}

<h2>Prescription Details</h2>

<a href="/Prescription/PharmacyPrescriptionList">Go back to Prescription List</a>
<br />

<br />
<a style="color:#ab2020;" href="/PrescriptionDrug/DeleteConfirm/@Model.selectedPrescriptionDrug">Delete</a>


<div>Patient Name: @Model.selectedPrescription.PatientFirstName @Model.selectedPrescription.PatientLastName</div>
<div>Doctor  Name: @Model.selectedPrescription.DoctorName</div>
<hr />
<div>
    <table>
        <tr>
            <th>Drug</th>
            <th>Quantity</th>
            <th>Direction</th>
            <th>Repeat</th>
            <th>drugid</th>
            <td>Action</td>
        </tr>
        @foreach (var drugs in Model.selectedPrescriptionDrug)
        {
            <tr>
                <td><a href="/drug/Details/@drugs.DrugId">@drugs.DrugName</a></td>
                <td>@drugs.Quantity</td>
                <td>@drugs.Sig</td>
                <td>@drugs.Repeat</td>
                <td>@drugs.DrugId</td>
            </tr>
        }
    </table>
    <hr />
    <br />
    <br />

    <div>
        <form action="/prescription/UpdatePrescriptionStatus/@Model.selectedPrescription.ID" method="POST">
            <div style="display:none">
                <input type="text" name="ID" value="@Model.selectedPrescription.ID" />
            </div>
            <div style="display:none">
                <input type="text" name="FirstName" value="@Model.selectedPrescription.PatientFirstName" />
            </div>
            <div style="display:none">
                <input type="text" name="LastName" value="@Model.selectedPrescription.PatientLastName" />
            </div>
            <div style="display:none">
                <input type="text" name="DoctorName" value="@Model.selectedPrescription.DoctorName" />
            </div>
            <div style="display:none">
                <input type="text" name="Status" value="true" />
            </div>
            <div>
                <input type="submit" value="Set Status to Processed" />
            </div>
        </form>
        <hr />
    </div>
</div>

